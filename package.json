{
  "name": "mira-elements",
  "version": "0.18.1",
  "revision": "0",
  "description": "Mira Frontend Component Library",
  "main": "./dist/mira-elements.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirainc/mira-elements.git"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "jsx-a11y/href-no-hash": 0,
      "arrow-parens": ["error", "as-needed"],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "react/jsx-wrap-multilines": [0],
      "react/prop-types": [
        2,
        {
          "ignore": ["classes"]
        }
      ]
    },
    "overrides": [
      {
        "files": ["*.test.js"],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.25.0",
    "classnames": "^2.2.5",
    "jss": "^8.1.0",
    "material-ui": "^1.0.0-beta.18",
    "moment": "^2.19.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-datepicker": "^0.57.0",
    "react-dom": "^15.6.1",
    "react-style-proptype": "^3.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": ["/node_modules/", "/test_helpers/"]
  },
  "codeship": {
    "projectId": "237328",
    "encryptedFiles": ["deploy.env"]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "react-styleguidist": "^6.0.20",
    "react-test-renderer": "^15.6.1",
    "sinon": "^2.4.1",
    "webpack": "^3.4.1"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "lint": "eslint src/**/*.js",
    "prepublish": "yarn build",
    "start": "styleguidist server",
    "styleguide:build": "cross-env NODE_ENV=production styleguidist build",
    "test": "jest",
    "encrypt": "node scripts/codeship.js encrypt",
    "decrypt": "node scripts/codeship.js decrypt"
  }
}
