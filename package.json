{
  "private": true,
  "name": "raydiant-elements",
  "version": "0.13.0",
  "scripts": {
    "start": "tsc && styleguidist server --config styleguide.config.js",
    "tsc": "tsc",
    "build": "tsc && copyfiles -u 2 src/lib/**/*.css build/lib && node tasks/copy-package-json.js",
    "build:watch": "tsc -w",
    "build:link": "yarn build && cd build/lib && yarn unlink && yarn link",
    "lint": "tslint --project .",
    "test": "jest src --env=jsdom",
    "deploy": "sh tasks/npm-publish.sh",
    "styleguide:build": "tsc && styleguidist build",
    "encryptenv": "jet encrypt docker/deploy.env docker/deploy.env.encrypted --key-path=mirainc_mira-elements.aes",
    "decryptenv": "jet decrypt docker/deploy.env.encrypted docker/deploy.env --key-path=mirainc_mira-elements.aes"
  },
  "dependencies": {
    "@date-io/moment": "^1.3.5",
    "@material-ui/core": "4.9.5",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.47",
    "@material-ui/pickers": "^3.2.10",
    "@material-ui/styles": "4.9.14",
    "classnames": "^2.2.6",
    "debounce": "^1.2.0",
    "is-touch-device": "^1.0.1",
    "lodash.isequal": "^4.5.0",
    "moment": "^2.24.0",
    "object-path": "^0.11.4",
    "object-path-immutable": "^3.0.0",
    "react-beautiful-dnd": "^10.0.3",
    "react-color": "^2.19.3",
    "react-datepicker": "^1.6.0",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dnd-touch-backend": "^10.0.2",
    "react-media": "^1.9.2",
    "react-motion": "^0.5.2",
    "react-spring": "^8.0.27",
    "react-text-mask": "^5.4.3",
    "tinycolor2": "^1.4.2"
  },
  "devDependencies": {
    "@material-ui/codemod": "^4.5.0",
    "@types/classnames": "^2.2.6",
    "@types/debounce": "^3.0.0",
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.2",
    "@types/object-path": "^0.9.29",
    "@types/react": "16.7.6",
    "@types/react-beautiful-dnd": "^7.1.1",
    "@types/react-datepicker": "^1.1.7",
    "@types/react-dom": "16.0.7",
    "@types/react-motion": "^0.0.27",
    "@types/react-test-renderer": "^16.0.2",
    "@types/react-text-mask": "^5.4.1",
    "@types/tinycolor2": "^1.4.2",
    "@types/uuid": "^3.4.4",
    "copyfiles": "^2.0.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "fs-extra": "^7.0.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-enzyme": "^6.0.4",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2",
    "react": "16.8.0",
    "react-docgen-typescript": "^1.9.1",
    "react-dom": "16.8.0",
    "react-styleguidist": "^7.3.8",
    "react-test-renderer": "^16.5.0",
    "style-loader": "^0.22.1",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "uuid": "^3.3.2",
    "webpack": "^4.16.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "rootDir": "src",
    "setupFiles": [
      "<rootDir>/setupTests.ts"
    ]
  }
}
