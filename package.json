{
  "name": "mira-elements",
  "version": "0.1.0",
  "revision": "0",
  "private": true,
  "description": "Mira Frontend Component Library",
  "main": "./dist/mira-elements.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirainc/mira-elements.git"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "jsx-a11y/href-no-hash": 0,
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/jsx-wrap-multilines": [
        0
      ]
    },
    "overrides": [
      {
        "files": [ "*.test.js" ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.25.0",
    "material-ui": "next",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "jest": {
    "testPathIgnorePatterns": ["/node_modules/", "/test_helpers/"]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "enzyme": "^2.9.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "react-styleguidist": "^6.0.2",
    "react-test-renderer": "^15.6.1",
    "sinon": "^2.4.1",
    "webpack": "^3.4.1"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "lint": "eslint src/**/*.js",
    "prepublish": "npm run build",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest"
  }
}
